<Window x:Class="StarTrad.View.Window.Progress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Téléchargement de la traduction"
		Width="300" Height="100"
		WindowStartupLocation="CenterScreen"
		ResizeMode="NoResize"
		Topmost="True"
		AllowsTransparency="True"
		WindowStyle="None">
	<Grid Background="#0D202D">
		<Label x:Name="Label_Title" Margin="10,10,10,0" VerticalAlignment="Top" Foreground="White" Height="31" FontWeight="Bold"/>

		<ProgressBar x:Name="ProgressBar_Progress" Margin="10,46,10,10" Foreground="#1C4D6E" Background="#FF122F43" BorderBrush="{x:Null}"/>
		<Label x:Name="Label_Progress" Margin="10,46,10,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
	</Grid>
</Window>
